#:kivy 1.0

<TextInput>
    hint_font_size: 1
    multiline: False
    padding: 1
    write_tab: False

mainScreen:
    name: "mainScreen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: Heading
            text: "Create Game"
            font_size: 32
            size_hint: 1, .2

        GridLayout:
            cols: 2
            #Headings
            size_hint: 1, .1
            Label:
                text: "Red Team"
                canvas.before:
                    Color:
                        rgba: (255,0,0,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                text: "Green Team"
                canvas.before:
                    Color:
                        rgba: (0,255,0,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size

        GridLayout:
            cols: 4
            #Headings
            Label:
                text: "Name"
                canvas.before:
                    Color:
                        rgba: (255,0,0,1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                text: "ID"
                canvas.before:
