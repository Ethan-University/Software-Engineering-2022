#:kivy 1.0
mainScreen:
    name: "mainScreen"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: Heading
            text: "Create Game"
            font_size: 32
            size_hint: 1, .2

        GridLayout:
            cols: 2
            #Headings
            Label:
                text: "Names"
            Label:
                text: "Id Numbers"
            
            # All text inputs
            TextInput:
                id: name_entry0
            TextInput:
                id: id_entry0
                input_filter: "int"
            TextInput:
                id: name_entry1
            TextInput:
                id: id_entry1
                input_filter: "int"
            TextInput:
                id: name_entry2
            TextInput:
                id: id_entry2
                input_filter: "int"
            TextInput:
                id: name_entry3
            TextInput:
                id: id_entry3
                input_filter: "int"
            TextInput:
                id: name_entry4
            TextInput:
                id: id_entry4
                input_filter: "int"
            TextInput:
                id: name_entry5
            TextInput:
                id: id_entry5
                input_filter: "int"
            TextInput:
                id: name_entry6
            TextInput:
                id: id_entry6
                input_filter: "int"
            TextInput:
                id: name_entry7
            TextInput:
                id: id_entry7
                input_filter: "int"
            TextInput:
                id: name_entry8
            TextInput:
                id: id_entry8
                input_filter: "int"
            TextInput:
                id: name_entry9
            TextInput:
                id: id_entry9
                input_filter: "int"
            TextInput:
                id: name_entry10
            TextInput:
                id: id_entry10
                input_filter: "int"
            TextInput:
                id: name_entry11
            TextInput:
                id: id_entry11
                input_filter: "int"
            TextInput:
                id: name_entry12
            TextInput:
                id: id_entry12
                input_filter: "int"
            TextInput:
                id: name_entry13
            TextInput:
                id: id_entry13
                input_filter: "int"
            TextInput:
                id: name_entry14
            TextInput:
                id: id_entry14
                input_filter: "int"
        Button:
            id: button
            text: "Press me"
            size_hint: 1, .2
            on_release:
                root.myFunc()
            
        Button:
			size_hint: (1, .2)
			text: "Submit Record"
			on_release: 
                app.submit()

        Button:
			size_hint: (1, .2)
			text: "Show Records"
			on_release: 
                app.showRecords()

        Label:
            id: testBox
            text: "Records will show here"
            font_size: 16
            size_hint: 1, .5